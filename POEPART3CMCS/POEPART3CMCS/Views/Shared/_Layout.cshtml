<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
</head>
<body>
    <header>
        
            <div class="navbar-links">
                @if (AppStateModel.State == "Lecturer")
                {
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li>
                            <a href="@Url.Action("Login", "Home")">
                                <i class="fas fa-sign-in-alt"></i> <!-- Login icon -->
                                <span class="sr-only">Login</span> <!-- For accessibility -->
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("LogOut", "Users")">
                                <i class="fas fa-sign-out-alt"></i> <!-- Log Out icon -->
                                <span class="sr-only">Log Out</span> <!-- For accessibility -->
                            </a>
                        </li>
                        <li><a href="@Url.Action("Register", "Lecturer")">Register</a></li>
                    </ul>
                }
                else if (AppStateModel.State == "HR")
                {
                    <ul>
                        <li><a href="@Url.Action("Claims", "HR")">Shop</a></li>
                        <li><a href="@Url.Action("ViewAllInvoices", "HR")">Invoices</a></li>
                        <li>
                            <a href="@Url.Action("Login", "Home")">
                                <i class="fas fa-sign-in-alt"></i> <!-- Login icon -->
                                <span class="sr-only">Login</span> <!-- For accessibility -->
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("LogOut", "HR")">
                                <i class="fas fa-sign-out-alt"></i> <!-- Log Out icon -->
                                <span class="sr-only">Log Out</span> <!-- For accessibility -->
                            </a>
                        </li>
                    </ul>
                }
                else if (AppStateModel.State == "Academic Manager")
                {
                    <ul>
                        <li><a href="@Url.Action("Dashboard", "AcademicManager")">Shop</a></li>
                        <li><a href="@Url.Action("ViewClaim", "AcademicManager")">Invoices</a></li>
                        <li>
                            <a href="@Url.Action("LogOut", "AcademicManager")">
                                <i class="fas fa-sign-out-alt"></i> <!-- Log Out icon -->
                                <span class="sr-only">Log Out</span> <!-- For accessibility -->
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul>
                        <li><a href="@Url.Action("Dashboard", "ProgrammeCoordinator")">Manage</a></li>
                        <li><a href="@Url.Action("ViewClaim", "ProgrammeCoordinator")">Add</a></li>
                        <li>
                            <a href="@Url.Action("LogOut", "ProgrammeCoordinator")">
                                <i class="fas fa-sign-out-alt"></i> <!-- Log Out icon -->
                                <span class="sr-only">Log Out</span> <!-- For accessibility -->
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <p>JoyKgomo</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>